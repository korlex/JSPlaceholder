<com.gturedi.views.StatefulLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_detail_state_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comkorlex.httpsgithub.jsplaceholder.ui.userdetail.UserDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/user_detail_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/user_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_account_circle"
            android:drawablePadding="2dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/user_detail_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="2dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/user_detail_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="2dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@color/grey"
            android:text="@string/gallery"
            android:textColor="@color/white"
            android:padding="2dp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/albums_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

</com.gturedi.views.StatefulLayout>
